@import url('https://fonts.googleapis.com/css?family=Josefin+Sans')
@import "normalize.styl"
body
#slider
.wrap
.slide
	width 100%
	height 100vh
	overflow-x hidden
	margin 0
	padding 0
	font-family 'Josefin Sans'

embed
	display none

#loader
	height 100%
	width 100%
	background black
	position fixed
	left 0
	top 0
	z-index 1
	img
		position relative
		top 50%
		left 50%
		transform translate(-50%, -50%)

.wrap
	position relative

.slide
	background-size cover
	background-position center
	background-repeat no-repeat
	display none

.slide1
	background-image url("http://avante.biz/wp-content/uploads/Trippy-Desktop-Backgrounds-HD/Trippy-Desktop-Backgrounds-HD-030.jpg")

.slide2
	background-image url("http://avante.biz/wp-content/uploads/Rasta-Images-Wallpapers/Rasta-Images-Wallpapers-004.jpg")

.slide3
	background-image url("http://avante.biz/wp-content/uploads/Rasta-Images-Wallpapers/Rasta-Images-Wallpapers-006.jpg")

.fade
	animation-name fade
	animation-duration .14s

@keyframes {fade}
	for i in 4..10
		{10% * i}
			opacity (i/10)


.functions
	a
		position absolute
		top 0
		right 0
		z-index 3
		width 100%
		height 100vh
	p
		position absolute
		bottom 0
		left 0
		font-size 60px
		width 100%
		text-align center
		z-index 2
		background rgba(0,0,0,0.9)
		padding 10px 0
		color aqua
a
	opacity 0